@model Shop.Models.UserViewModel

<div class="row">
    <div class="col-md-3">
        <div class="list-group my-4">
            <a asp-action="GetOrders" class="list-group-item list-group-item-action">Заказы</a>
            <a asp-action="GetUsers" class="list-group-item list-group-item-action">Пользователи</a>
            <a asp-action="GetRoles" class="list-group-item list-group-item-action">Роли</a>
            <a asp-action="AddProduct" class="list-group-item list-group-item-action">Добавление товаров</a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card my-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Пользователь @Model.Email</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label for="name" class="col-4 col-form-label">Имя</label>
                            <div class="col-8">
                                <p class="font-weight-normal">@Model.Name</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="lastname" class="col-4 col-form-label">Фамилия</label>
                            <div class="col-8">
                                <p class="font-weight-normal">@Model.Surname</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-4 col-form-label">Email (логин)</label>
                            <div class="col-8">
                                <p class="font-weight-normal">@Model.Email</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="phone" class="col-4 col-form-label">Номер телефона</label>
                            <div class="col-8">
                                <p class="font-weight-normal">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Действия
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" Asp-action="ChangeUserPassword" Asp-route-id="@Model.Id">Смена пароля</a>
                                <a class="dropdown-item" Asp-action="EditUser" Asp-route-id="@Model.Id">Редактирование данных</a>
                                <a class="dropdown-item" Asp-action="EditUserRights" Asp-route-id="@Model.Id">Права доступа</a>
                                <a class="dropdown-item" Asp-action="DeleteUser" Asp-route-id="@Model.Id">Удалить пользователя</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>