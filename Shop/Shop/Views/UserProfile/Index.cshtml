@model Shop.Models.UserViewModel

<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-action="Index" class="list-group-item list-group-item-action">Данные пользователя</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="list-group-item list-group-item-action">Изменить данные</a>
            <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="list-group-item list-group-item-action">Изменить пароль</a>
            <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action">Корзина</a>
            <a asp-action="GetAllOrders" class="list-group-item list-group-item-action">Заказы</a>
            <a class="list-group-item list-group-item-action">
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" value="Выйти из профиля" style="background:none;border:none;padding:0">
                </form>
            </a>
        </div>
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @if (Model.Name == null)
                        {
                            <h4>@Model.Email</h4>
                        }
                        else
                        {
                            <h4>@Model.Name</h4>
                        }
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Имя</label>
                                <div class="col-8">
                                    <p class="font-weight-normal">@Model.Name</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="lastname" class="col-4 col-form-label">Фамилия</label>
                                <div class="col-8">
                                    <p class="font-weight-normal">@Model.Surname</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="email" class="col-4 col-form-label">Email (логин)</label>
                                <div class="col-8">
                                    <p class="font-weight-normal">@Model.Email</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="phone" class="col-4 col-form-label">Номер телефона</label>
                                <div class="col-8">
                                    <p class="font-weight-normal">@Model.PhoneNumber</p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
