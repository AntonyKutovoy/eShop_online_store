@model Shop.Models.UserViewModel

<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-action="Index" class="list-group-item list-group-item-action">Данные пользователя</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="list-group-item list-group-item-action">Изменить данные</a>
            <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="list-group-item list-group-item-action">Изменить пароль</a>
            <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action">Корзина</a>
            <a asp-action="GetAllOrders" class="list-group-item list-group-item-action">Заказы</a>
            <a class="list-group-item list-group-item-action">
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" value="Выйти из профиля" style="background:none;border:none;padding:0">
                </form>
            </a>
        </div>
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @if (Model.Name == null)
                        {
                            <h4>@Model.Email</h4>
                        }
                        else
                        {
                            <h4>@Model.Name</h4>
                        }
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="ChangePassword" asp-controller="UserProfile">
                            <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Name" />
                            <div class="form-group row">
                                <label asp-for="Password" class="col-4 col-form-label">Текущий пароль</label>
                                <div class="col-8">
                                    <input asp-for="Password" placeholder="Текущий пароль" class="form-control here" type="password" autocomplete="new-password" required>
                                    <span asp-validation-for="Password" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="NewPassword" class="col-4 col-form-label">Новый пароль</label>
                                <div class="col-8">
                                    <input asp-for="NewPassword" placeholder="Новый пароль" class="form-control here" type="password" required>
                                    <span asp-validation-for="NewPassword" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PasswordConfirm" class="col-4 col-form-label">Подтвердить новый пароль</label>
                                <div class="col-8">
                                    <input asp-for="PasswordConfirm" placeholder="Подтвердить новый пароль" class="form-control here" type="password" required>
                                    <span asp-validation-for="PasswordConfirm" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8">
                                    <button name="submit" type="submit" class="btn btn-info">Сохранить данные</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>