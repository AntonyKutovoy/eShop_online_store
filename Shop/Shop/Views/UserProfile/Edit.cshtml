@model Shop.Models.UserViewModel

<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-action="Index" class="list-group-item list-group-item-action">Данные пользователя</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="list-group-item list-group-item-action">Изменить данные</a>
            <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="list-group-item list-group-item-action">Изменить пароль</a>
            <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action">Корзина</a>
            <a asp-action="GetAllOrders" class="list-group-item list-group-item-action">Заказы</a>
            <a class="list-group-item list-group-item-action">
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" value="Выйти из профиля" style="background:none;border:none;padding:0">
                </form>
            </a>
        </div>
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @if (Model.Name == null)
                        {
                            <h4>@Model.Email</h4>
                        }
                        else
                        {
                            <h4>@Model.Name</h4>
                        }
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit" asp-controller="UserProfile">
                            <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-4 col-form-label">Имя</label>
                                <div class="col-8">
                                    <input asp-for="Name" placeholder="Имя" class="form-control here" type="text">
                                    <span asp-validation-for="Name" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Surname" class="col-4 col-form-label">Фамилия</label>
                                <div class="col-8">
                                    <input asp-for="Surname" placeholder="Фамилия" class="form-control here" type="text">
                                    <span asp-validation-for="Surname" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-4 col-form-label">Email (логин)</label>
                                <div class="col-8">
                                    <input asp-for="Email" placeholder="Email" class="form-control here" type="email" required>
                                    <span asp-validation-for="Email" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PhoneNumber" class="col-4 col-form-label">Номер телефона</label>
                                <div class="col-8">
                                    <input asp-for="PhoneNumber" placeholder="Номер телефона" class="form-control here" type="tel">
                                    <span asp-validation-for="PhoneNumber" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="d-flex col-md-12">
                                    <div class="ml-auto">
                                        <button type="submit" class="btn btn-info">Сохранить</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>