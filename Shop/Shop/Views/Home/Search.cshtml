@model List<Shop.Models.ProductViewModel>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-center my-4">
            <form asp-controller="Home" asp-action="Search" class="input-group col-10">
                <input type="text" name="name" class="form-control" placeholder="Поиск" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-dark" href="" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 15 18">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselIndicators" data-slide-to="1"></li>
                <li data-target="#carouselIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block img-fluid" src="\images\banners\1200x300.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="\images\banners\1200x300.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="\images\banners\1200x300.png" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-3 mt-4">
                    <div class="card h-100 box-shadow">
                        <a asp-controller="Product" asp-action="Index" asp-route-id="@product.Id"><img class="card-img-top" src="@Url.Content(product.ImagePath)" alt="Изображение товара"></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a class="text-dark" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a>
                            </h4>
                            <h5>@product.Price &#8381;</h5>
                            <p class="card-text">@product.Description</p>
                        </div>
                        <div class="card-body d-flex align-items-end">
                            <a class="btn btn-info" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" role="button">В корзину</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


